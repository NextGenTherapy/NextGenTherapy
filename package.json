{
  "name": "next-gen-therapy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "perf:check": "node scripts/performance-check.js",
    "perf:lighthouse": "npm run perf:check",
    "perf:budget": "npm run perf:check && echo 'Performance budget check completed'",
    "test:visual": "playwright test visual-regression.spec.ts",
    "test:perf": "npm run perf:check",
    "monitor:health": "node monitoring/health-monitor.js",
    "monitor:test": "node -e \"console.log('Testing monitoring system...'); require('./monitoring/health-monitor.js').runHealthChecks().then(success => { console.log('Monitor test:', success ? 'PASSED' : 'FAILED'); process.exit(success ? 0 : 1); })\""
  },
  "dependencies": {
    "@next/third-parties": "^15.4.0-canary.51",
    "@notionhq/client": "^3.1.3",
    "@sanity/client": "^7.4.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "gray-matter": "^4.0.3",
    "next": "^15.3.2",
    "next-sitemap": "^4.2.3",
    "nodemailer": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "resend": "^4.5.1",
    "sass": "^1.89.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chrome-launcher": "^1.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "prettier": "^3.6.0",
    "typescript": "^5.2.0"
  }
